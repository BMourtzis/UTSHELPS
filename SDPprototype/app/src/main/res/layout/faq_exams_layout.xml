<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/faq_other_programs_background">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TabLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:tabTextColor="@color/colorAccent"
            app:tabSelectedTextColor="@color/colorAccentHighlight">

            <android.support.design.widget.TabItem
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/title_faq_helps_program" />

            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_faq_exam" />

            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_faq_misc" />
        </android.support.design.widget.TabLayout>

        <Button
            android:text="@string/title_faq_exam_native_question"
            android:textSize="20sp"
            android:textColor="@color/colorAccent"
            android:gravity="start|center_vertical"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/colorOpaqueTextBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/exam_q1_button"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/colorAccentHighlight"/>

        <TextView
            android:text="@string/title_faq_exam_native_answer"
            android:textSize="15sp"
            android:paddingLeft="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/colorAccent"
            android:background="@color/colorOpaqueButtonBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:id="@+id/exam_q1_text"/>

        <Button
            android:text="@string/title_faq_exam_special_question"
            android:textSize="20sp"
            android:textColor="@color/colorAccent"
            android:gravity="start|center_vertical"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/colorOpaqueButtonBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/exam_q2_button"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/colorAccentHighlight"/>

        <TextView
            android:text="@string/title_faq_exam_special_answer"
            android:textSize="15sp"
            android:paddingLeft="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/colorAccent"
            android:background="@color/colorOpaqueButtonBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:id="@+id/exam_q2_text"/>

        <Button
            android:text="@string/title_faq_exam_deadline_question"
            android:textSize="20sp"
            android:textColor="@color/colorAccent"
            android:gravity="start|center_vertical"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/colorOpaqueButtonBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/exam_q3_button"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/colorAccentHighlight"/>

        <TextView
            android:text="@string/title_faq_exam_deadline_answer"
            android:textSize="15sp"
            android:paddingLeft="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/colorAccent"
            android:background="@color/colorOpaqueButtonBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:id="@+id/exam_q3_text"/>

        <Button
            android:text="@string/title_faq_exam_apply_question"
            android:textSize="20sp"
            android:textColor="@color/colorAccent"
            android:gravity="start|center_vertical"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/colorOpaqueButtonBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/exam_q4_button"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/colorAccentHighlight"/>

        <TextView
            android:text="@string/title_faq_exam_apply_question"
            android:textSize="15sp"
            android:paddingLeft="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/colorAccent"
            android:background="@color/colorOpaqueButtonBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:id="@+id/exam_q4_text"/>

    </LinearLayout>
</ScrollView>